<?xml version="1.0"?>
<package xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <metadata xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <id>HelixToolkit.UWP</id>
    <version>$version$</version>
    <title>HelixToolkit for UWP (based on SharpDX)</title>
    <authors>objo, Lunci</authors>
    <license type="expression">MIT</license>
    <projectUrl>https://github.com/helix-toolkit/helix-toolkit</projectUrl>
    <icon>helixtoolkit.png</icon>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Provides custom 3D controls for UWP and a scene graph based on SharpDX.</description>
    <tags>UWP SharpDX 3D</tags>
    <dependencies>
	    <group targetFramework="UAP10.0">
		    <dependency id="Microsoft.NETCore.UniversalWindowsPlatform" version="6.1.7" exclude="Build,Analyzers" />
		    <dependency id="Cyotek.Drawing.BitmapFont" version="2.0.0" />
		    <dependency id="HelixToolkit" version="[$version$]" />
		    <dependency id="SharpDX" version="4.2.0" />
		    <dependency id="SharpDX.D3DCompiler" version="4.2.0" />
		    <dependency id="SharpDX.Direct2D1" version="4.2.0" />
		    <dependency id="SharpDX.Direct3D11" version="4.2.0" />
		    <dependency id="SharpDX.DXGI" version="4.2.0" />
		    <dependency id="SharpDX.Mathematics" version="4.2.0" />
		    <dependency id="System.ComponentModel.TypeConverter" version="4.3.0"/>
		    <dependency id="System.Drawing.Primitives" version="4.3.0"/>		
		    <dependency id="System.Private.DataContractSerialization" version="4.3.0"/>
      </group>
    </dependencies>
    <contentFiles>
      <files include="any/any/HelixToolkit.UWP/Resources/*.*" buildAction="none" copyToOutput="true" flatten="false" />
      <files include="any/any/HelixToolkit.UWP/Themes/*.*" buildAction="none" copyToOutput="true" flatten="false" />
    </contentFiles>
  </metadata>
  <files>
    <file src="HelixToolkit.UWP\bin\Release\HelixToolkit.UWP.???" target="lib\uap10.0" />
    <file src="HelixToolkit.UWP\bin\Release\HelixToolkit.UWP\HelixToolkit.UWP.??.xml" target="lib\uap10.0\HelixToolkit.UWP" />
    <file src="HelixToolkit.UWP\bin\Release\HelixToolkit.UWP\Resources\*.*" target="content\HelixToolkit.UWP\Resources" />
    <file src="HelixToolkit.UWP\bin\Release\HelixToolkit.UWP\Resources\*.*" target="contentFiles\any\any\HelixToolkit.UWP\Resources" />
    <file src="HelixToolkit.UWP\bin\Release\HelixToolkit.UWP\Themes\*.*" target="content\HelixToolkit.UWP\Themes" />
    <file src="HelixToolkit.UWP\bin\Release\HelixToolkit.UWP\Themes\*.*" target="contentFiles\any\any\HelixToolkit.UWP\Themes" />
    <file src="..\LICENSE" />
    <file src="..\AUTHORS" />
    <file src="..\CONTRIBUTORS" />
    <file src="..\README.md" />
	<file src="..\Images\helixtoolkit.png" target="" />
  </files>
</package>